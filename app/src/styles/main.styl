@import './bootstrap-min.css'

html body 
	margin: 0px
	padding: 0px
	overflow-x: hidden

.auf
	color: #7f7f7f
	font-size: 1em

.alg 
	color: #c7254e
	font: 1em 'monospace'
	
.alg, .auf, p
	@media (max-width: 300px)
		font-size: 30%; 
	
	@media (min-width: 300px) and (max-width: 500px)
		font-size: 50%;
 
	@media (min-width: 500px) and (max-width: 700px)
		font-size: 40%;